import React, { useEffect, useState } from "react";
import API from "../api";

function PostFeed() {
  const [posts, setPosts] = useState([]);
  const [comment, setComment] = useState("");

  const fetchPosts = async () => {
    const res = await API.get("/posts");
    setPosts(res.data);
  };

  const likePost = async (id) => {
    await API.put(`/posts/like/${id}`);
    fetchPosts();
  };

  const addComment = async (id) => {
    await API.post(`/posts/comment/${id}`, { text: comment });
    setComment("");
    fetchPosts();
  };

  useEffect(() => { fetchPosts(); }, []);

  return (
    <div>
      {posts.map(post => (
        <div key={post._id}>
          <p>{post.author.username}: {post.content}</p>
          {post.image && <img src={`http://localhost:5000/${post.image}`} alt="post" width="200"/>}
          <button onClick={() => likePost(post._id)}>Like ({post.likes.length})</button>
          <div>
            {post.comments.map(c => (<p key={c._id}><b>{c.user.username}:</b> {c.text}</p>))}
            <input value={comment} onChange={e => setComment(e.target.value)} placeholder="Comment"/>
            <button onClick={() => addComment(post._id)}>Add Comment</button>
          </div>
        </div>
      ))}
    </div>
  );
}

export default PostFeed;
